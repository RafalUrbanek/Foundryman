<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunnerActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SprueActivity"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="53dp">

        <EditText
            android:id="@+id/runner_ingate_filter_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/runner_well_filter_1"
            app:layout_constraintStart_toEndOf="@+id/runner_text_3"
            app:layout_constraintTop_toBottomOf="@+id/runner_well_filter_1" />

        <EditText
            android:id="@+id/runner_well_filter_2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/runner_text_11"
            app:layout_constraintTop_toBottomOf="@+id/runner_height_2" />

        <TextView
            android:id="@+id/runner_text_11"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="X"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/runner_well_filter_1"
            app:layout_constraintTop_toBottomOf="@+id/runner_height_2" />

        <TextView
            android:id="@+id/runner_text_10"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="X"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/runner_well_filter_1"
            app:layout_constraintTop_toTopOf="@+id/runner_ingate_filter_2" />

        <TextView
            android:id="@+id/runner_text_9"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="Well filter size"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/runner_height_2" />

        <TextView
            android:id="@+id/runner_text_8"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="Runner bar end height"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/runner_height_2" />

        <TextView
            android:id="@+id/runner_text_7"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="In-gate filter sizes"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/runner_ingate_filter_2" />

        <TextView
            android:id="@+id/runner_text_6"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="Runner bar width"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/runner_width" />

        <TextView
            android:id="@+id/runner_text_5"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="Total no. of in-gates"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/runner_ingates" />

        <TextView
            android:id="@+id/runner_text_4"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="Runner bar start heigh"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/runner_height_1" />

        <EditText
            android:id="@+id/runner_ingate_filter_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/runner_well_filter_2"
            app:layout_constraintStart_toEndOf="@+id/runner_text_10"
            app:layout_constraintTop_toBottomOf="@+id/runner_well_filter_1" />

        <EditText
            android:id="@+id/runner_height_2"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/runner_text_3"
            app:layout_constraintTop_toBottomOf="@+id/runner_height_1" />

        <EditText
            android:id="@+id/runner_height_1"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/runner_text_3"
            app:layout_constraintTop_toBottomOf="@+id/runner_width" />

        <EditText
            android:id="@+id/runner_well_filter_1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintStart_toEndOf="@+id/runner_text_3"
            app:layout_constraintTop_toBottomOf="@+id/runner_height_2" />

        <EditText
            android:id="@+id/runner_width"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/runner_text_3"
            app:layout_constraintTop_toBottomOf="@+id/runner_ingates" />

        <EditText
            android:id="@+id/runner_ingates"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/runner_text_3"
            app:layout_constraintTop_toBottomOf="@+id/runner_arms" />

        <TextView
            android:id="@+id/runner_text_3"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="No. of runner bar arms"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider21" />

        <View
            android:id="@+id/divider21"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/runner_text_2" />

        <Switch
            android:id="@+id/runner_switch_1"
            android:layout_width="110dp"
            android:layout_height="0dp"
            android:text=" past Well"
            app:layout_constraintBottom_toBottomOf="@+id/runner_text_2"
            app:layout_constraintStart_toEndOf="@+id/runner_text_2"
            app:layout_constraintTop_toTopOf="@+id/runner_text_2" />

        <View
            android:id="@+id/divider11"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/runner_type_spinner" />

        <TextView
            android:id="@+id/runner_text_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="Filters"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/runner_text_1" />

        <TextView
            android:id="@+id/summaryTxtRatios"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <EditText
            android:id="@+id/projectNameTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="Project name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toStartOf="@+id/MainOptionsBtn"
            app:layout_constraintStart_toEndOf="@+id/spinner"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/MainOptionsBtn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summaryTxtRatios" />

        <TextView
            android:id="@+id/runner_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:width="100dp"
            android:height="30dp"
            android:gravity="center"
            android:text="Well type"
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider6" />

        <Spinner
            android:id="@+id/runner_type_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/runner_text_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/runner_text_1"
            app:layout_constraintTop_toTopOf="@+id/runner_text_1" />

        <Switch
            android:id="@+id/runner_switch_2"
            android:layout_width="120dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:text=" on in-gates"
            app:layout_constraintBottom_toBottomOf="@+id/runner_text_2"
            app:layout_constraintStart_toEndOf="@+id/runner_switch_1"
            app:layout_constraintTop_toTopOf="@+id/runner_text_2"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/runner_arms"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/runner_text_3"
            app:layout_constraintTop_toTopOf="@+id/runner_text_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>