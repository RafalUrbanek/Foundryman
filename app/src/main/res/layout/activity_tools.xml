<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToolsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SprueActivity"
        tools:layout_editor_absoluteX="-83dp"
        tools:layout_editor_absoluteY="0dp">

        <View
            android:id="@+id/divider39"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tools_text9" />

        <EditText
            android:id="@+id/tools_inch_text"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:paddingBottom="6dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/tools_text9"
            app:layout_constraintStart_toEndOf="@+id/tools_text9"
            app:layout_constraintTop_toTopOf="@+id/tools_text9" />

        <TextView
            android:id="@+id/tools_text10"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@color/sleeve_gray"
            android:gravity="center"
            android:text="cm"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tools_cm_text"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/tools_cm_text"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:paddingBottom="6dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/tools_text9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tools_text9" />

        <TextView
            android:id="@+id/tools_text9"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:background="@color/sleeve_gray"
            android:gravity="center"
            android:text="Inch"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Inch/cm converter"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider36" />

        <TextView
            android:id="@+id/tools_modulus_text"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@color/field_gray"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tools_text3" />

        <TextView
            android:id="@+id/tools_text5"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@color/sleeve_gray"
            android:gravity="center"
            android:text="Modulus"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/tools_modulus_text"
            app:layout_constraintTop_toBottomOf="@+id/tools_text3" />

        <TextView
            android:id="@+id/tools_volume_text"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@color/field_gray"
            android:gravity="center"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/tools_text4"
            app:layout_constraintTop_toBottomOf="@+id/tools_text3" />

        <TextView
            android:id="@+id/tools_text4"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@color/sleeve_gray"
            android:gravity="center"
            android:text="Volume [mm^3]"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tools_text3" />

        <TextView
            android:id="@+id/tools_text3"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:background="@color/sleeve_gray"
            android:gravity="center"
            android:text="text"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tools_text2" />

        <EditText
            android:id="@+id/tools_editText3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:paddingBottom="6dp"
            android:textAlignment="center"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/tools_text3"
            app:layout_constraintEnd_toEndOf="@+id/tools_mod_spinner"
            app:layout_constraintStart_toEndOf="@+id/tools_text1"
            app:layout_constraintTop_toTopOf="@+id/tools_text3" />

        <EditText
            android:id="@+id/tools_editText2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:paddingBottom="6dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/tools_text2"
            app:layout_constraintEnd_toEndOf="@+id/tools_mod_spinner"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tools_text1"
            app:layout_constraintTop_toTopOf="@+id/tools_text2" />

        <TextView
            android:id="@+id/tools_text2"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:background="@color/sleeve_gray"
            android:gravity="center"
            android:text="text"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tools_text1" />

        <View
            android:id="@+id/divider36"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tools_text4" />

        <TextView
            android:id="@+id/summaryTxtTools"
            android:layout_width="0sp"
            android:layout_height="40sp"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider2" />

        <EditText
            android:id="@+id/projectNameTxt"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="Project name"
            android:inputType="textPersonName"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toStartOf="@+id/MainOptionsBtn"
            app:layout_constraintStart_toEndOf="@+id/spinner"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/MainOptionsBtn"
            android:layout_width="50dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/ic_menu_manage" />

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner" />

        <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/summaryTxtTools" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Modulus"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider6" />

        <Spinner
            android:id="@+id/tools_mod_spinner"
            android:layout_width="200dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tools_text1"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:background="@color/sleeve_gray"
            android:gravity="center"
            android:text="text"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tools_mod_spinner" />

        <EditText
            android:id="@+id/tools_editText1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:inputType="number|numberDecimal"
            android:paddingBottom="6dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/tools_text2"
            app:layout_constraintEnd_toEndOf="@+id/tools_mod_spinner"
            app:layout_constraintStart_toEndOf="@+id/tools_text1"
            app:layout_constraintTop_toTopOf="@+id/tools_text1" />

        <ImageView
            android:id="@+id/tools_pic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="@+id/tools_text3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tools_mod_spinner"
            app:layout_constraintTop_toBottomOf="@+id/tools_mod_spinner"
            app:srcCompat="@mipmap/cylinder" />

        <Button
            android:id="@+id/tools_mod_calc_btn"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="#D3C9EFC8"
            android:text="Calculate"
            app:layout_constraintBottom_toBottomOf="@+id/tools_mod_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.63"
            app:layout_constraintStart_toEndOf="@+id/tools_mod_spinner"
            app:layout_constraintTop_toBottomOf="@+id/divider6"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>