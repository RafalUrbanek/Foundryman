<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#50000000"/>
                    <corners android:radius="10dp"/>
                </shape>
            </item>
              android:right="5px" to make it round-->
            <item
                android:bottom="5px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#D35BEC59"
                        android:endColor="#D35BEC59"
                        android:angle="270" />
                    <corners
                        android:radius="10dp"/>
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="3dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#D35BEC59"/>
                    <corners android:radius="10dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:startColor="#D35BEC59"
                        android:endColor="#D35BEC59"
                        android:angle="270" />
                    <corners
                        android:radius="10dp"/>
                    <padding
                        android:left="0dp"
                        android:top="0dp"
                        android:right="0dp"
                        android:bottom="0dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>